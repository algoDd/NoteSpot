# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                          controllers.Assets.at(path="/public",file="html/index.html")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
#Handling Html						
GET /about								controllers.Assets.at(path="/public", file="html/index.html")
GET /index								controllers.Assets.at(path="/public", file="html/index.html")
GET /home								controllers.Assets.at(path="/public", file="html/index.html")
GET /contact							controllers.Assets.at(path="/public", file="html/index.html")
GET /notespot								controllers.Assets.at(path="/public", file="html/upload.html")
GET /login								controllers.Assets.at(path="/public", file="html/index.html")
GET /admin								controllers.Assets.at(path="/public", file="html/admin.html")
GET /signup								controllers.Assets.at(path="/public", file="html/index.html")
GET /api/notespot							controllers.LoginController.check(username:String)

#signup
POST /api/signup							controllers.LoginController.signup
#login
POST /api/login								controllers.LoginController.login
#upload
POST /api/upload								controllers.LoginController.upload
#get notes
GET /api/uploadFiles						controllers.LoginController.getfiles
#GET /second									controllers.Assets.at(path="/public", file="html/index.html")
POST /api/addAdmin							controllers.AdminController.addAdmin